<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ming.upms.system.dao.UpmsUploadFileDao">

	<select id="get" resultType="com.ming.upms.system.domain.UpmsUploadFileDO">
		select `system_id`,`user_id`,`basepath`,`status`,`name`,`salt`,`description`,`ctime`,`orders` from upms_upload_file where system_id = #{value}
	</select>

	<select id="list" resultType="com.ming.upms.system.domain.UpmsUploadFileDO">
		select `system_id`,`user_id`,`basepath`,`status`,`name`,`salt`,`description`,`ctime`,`orders` from upms_upload_file
        <where>  
		  		  <if test="systemId != null and systemId != ''"> and system_id = #{systemId} </if>
		  		  <if test="userId != null and userId != ''"> and user_id = #{userId} </if>
		  		  <if test="basepath != null and basepath != ''"> and basepath = #{basepath} </if>
		  		  <if test="status != null and status != ''"> and status = #{status} </if>
		  		  <if test="name != null and name != ''"> and name = #{name} </if>
		  		  <if test="salt != null and salt != ''"> and salt = #{salt} </if>
		  		  <if test="description != null and description != ''"> and description = #{description} </if>
		  		  <if test="ctime != null and ctime != ''"> and ctime = #{ctime} </if>
		  		  <if test="orders != null and orders != ''"> and orders = #{orders} </if>
		  		</where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
			<otherwise>
                order by system_id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="count" resultType="int">
		select count(*) from upms_upload_file
		 <where>  
		  		  <if test="systemId != null and systemId != ''"> and system_id = #{systemId} </if>
		  		  <if test="userId != null and userId != ''"> and user_id = #{userId} </if>
		  		  <if test="basepath != null and basepath != ''"> and basepath = #{basepath} </if>
		  		  <if test="status != null and status != ''"> and status = #{status} </if>
		  		  <if test="name != null and name != ''"> and name = #{name} </if>
		  		  <if test="salt != null and salt != ''"> and salt = #{salt} </if>
		  		  <if test="description != null and description != ''"> and description = #{description} </if>
		  		  <if test="ctime != null and ctime != ''"> and ctime = #{ctime} </if>
		  		  <if test="orders != null and orders != ''"> and orders = #{orders} </if>
		  		</where>
	</select>
	 
	<insert id="save" parameterType="com.ming.upms.system.domain.UpmsUploadFileDO">
		insert into upms_upload_file
		(
			`system_id`, 
			`user_id`, 
			`basepath`, 
			`status`, 
			`name`, 
			`salt`, 
			`description`, 
			`ctime`, 
			`orders`
		)
		values
		(
			#{systemId}, 
			#{userId}, 
			#{basepath}, 
			#{status}, 
			#{name}, 
			#{salt}, 
			#{description}, 
			#{ctime}, 
			#{orders}
		)
	</insert>
	 
	<update id="update" parameterType="com.ming.upms.system.domain.UpmsUploadFileDO">
		update upms_upload_file 
		<set>
			<if test="userId != null">`user_id` = #{userId}, </if>
			<if test="basepath != null">`basepath` = #{basepath}, </if>
			<if test="status != null">`status` = #{status}, </if>
			<if test="name != null">`name` = #{name}, </if>
			<if test="salt != null">`salt` = #{salt}, </if>
			<if test="description != null">`description` = #{description}, </if>
			<if test="ctime != null">`ctime` = #{ctime}, </if>
			<if test="orders != null">`orders` = #{orders}</if>
		</set>
		where system_id = #{systemId}
	</update>
	
	<delete id="remove">
		delete from upms_upload_file where system_id = #{value}
	</delete>
	
	<delete id="batchRemove">
		delete from upms_upload_file where system_id in 
		<foreach item="systemId" collection="array" open="(" separator="," close=")">
			#{systemId}
		</foreach>
	</delete>

</mapper>